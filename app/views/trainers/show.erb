<%if @trainer == current_user%>
<p>update your Trainer info <a href="/trainers/<%=@trainer.id%>/edit">here</a></p>
<%end%>


<h3><%=@trainer.trainer_name%>'s pokemon!</h3>
<ul>
<%@trainer.pokemon.each do |p|%>
  <li>
    <ul>
      <li>Pokemon Name: <a href="/pokemon/<%=p.id%>"><strong><%=p.name%></strong></a></li>
      <li>Pokemon Nick Name: <%=p.nickname%></li>
      <li>Pokemon Type: <%=p.element%></li>
      <br>
    </ul>
  </li>
<%end%>
</ul>

<p><a href=/pokemon>all pokemon</a></p>